<mujoco model="full_humanoid">
  <compiler angle="degree" coordinate="local"/>

  <option timestep="0.002" gravity="0 0 -9.81"/>

  <default>
    <joint damping="0.5" armature="0.01"/>
    <geom contype="1" conaffinity="1" friction="1 0.5 0.5"/>
    <motor ctrllimited="true" ctrlrange="-1 1"/>
  </default>

  <worldbody>
    <!-- Ground plane -->
    <geom name="floor" type="plane" size="10 10 0.1" rgba="0.8 0.8 0.8 1"/>

    <!-- Torso (pelvis) - floating base -->
    <body name="torso" pos="0 0 0.6">
      <freejoint name="root"/>
      <geom name="pelvis" type="box" size="0.15 0.08 0.1" rgba="0.5 0.2 0.2 1" mass="3"/>
      <site name="torso_site" pos="0 0 0"/>

      <!-- Upper body -->
      <body name="upper_torso" pos="0 0 0.15">
        <geom name="chest" type="box" size="0.12 0.06 0.1" rgba="0.5 0.2 0.2 1" mass="2"/>

        <!-- HEAD (Servo 0) -->
        <body name="neck" pos="0 0 0.12">
          <geom name="neck_geom" type="box" size="0.04 0.04 0.025" rgba="0.5 0.2 0.2 1" mass="0.2"/>

          <body name="head" pos="0 0 0.05">
            <!-- Servo 0: Head rotation (left/right) -->
            <joint name="head_pan" type="hinge" axis="0 0 1" range="-90 90"/>
            <geom name="head_geom" type="box" size="0.08 0.08 0.08" rgba="0.5 0.2 0.2 1" mass="1"/>
            <site name="head_site" pos="0 0.08 0"/>
          </body>
        </body>

        <!-- RIGHT ARM (Servos 1, 2, 3) -->
        <body name="right_shoulder" pos="0.15 0 0.05">
          <!-- Servo 1: Shoulder (fwd/back) -->
          <joint name="right_shoulder_pitch" type="hinge" axis="0 1 0" range="-90 90"/>
          <geom name="right_shoulder_geom" type="box" size="0.035 0.035 0.035" rgba="0.5 0.2 0.2 1"/>

          <body name="right_upper_arm" pos="0 0 0">
            <!-- Servo 2: Upper arm (in/out) -->
            <joint name="right_shoulder_roll" type="hinge" axis="1 0 0" range="-30 90"/>
            <geom name="right_upper_arm_geom" type="box" size="0.06 0.025 0.025" pos="0.06 0 -0.025" rgba="0.5 0.2 0.2 1" mass="0.5"/>

            <body name="right_forearm" pos="0.12 0 -0.05">
              <!-- Servo 3: Forearm (in/out) -->
              <joint name="right_elbow" type="hinge" axis="0 1 0" range="0 120"/>
              <geom name="right_forearm_geom" type="box" size="0.05 0.02 0.02" pos="0.05 0 -0.015" rgba="0.5 0.2 0.2 1" mass="0.3"/>

              <body name="right_hand" pos="0.1 0 -0.03">
                <geom name="right_hand_geom" type="box" size="0.025 0.025 0.025" rgba="0.5 0.2 0.2 1" mass="0.1"/>
              </body>
            </body>
          </body>
        </body>

        <!-- LEFT ARM (Servos 12, 13, 14) -->
        <body name="left_shoulder" pos="-0.15 0 0.05">
          <!-- Servo 12: Shoulder (fwd/back) -->
          <joint name="left_shoulder_pitch" type="hinge" axis="0 1 0" range="-90 90"/>
          <geom name="left_shoulder_geom" type="box" size="0.035 0.035 0.035" rgba="0.5 0.2 0.2 1"/>

          <body name="left_upper_arm" pos="0 0 0">
            <!-- Servo 13: Upper arm (in/out) -->
            <joint name="left_shoulder_roll" type="hinge" axis="1 0 0" range="-90 30"/>
            <geom name="left_upper_arm_geom" type="box" size="0.06 0.025 0.025" pos="-0.06 0 -0.025" rgba="0.5 0.2 0.2 1" mass="0.5"/>

            <body name="left_forearm" pos="-0.12 0 -0.05">
              <!-- Servo 14: Forearm (in/out) -->
              <joint name="left_elbow" type="hinge" axis="0 1 0" range="0 120"/>
              <geom name="left_forearm_geom" type="box" size="0.05 0.02 0.02" pos="-0.05 0 -0.015" rgba="0.5 0.2 0.2 1" mass="0.3"/>

              <body name="left_hand" pos="-0.1 0 -0.03">
                <geom name="left_hand_geom" type="box" size="0.025 0.025 0.025" rgba="0.5 0.2 0.2 1" mass="0.1"/>
              </body>
            </body>
          </body>
        </body>
      </body>

      <!-- RIGHT LEG (Servos 4, 5, 6, 7) -->
      <body name="right_hip" pos="0.08 0 -0.1">
        <!-- Servo 4: Hip roll (out/in) -->
        <joint name="right_hip_roll" type="hinge" axis="1 0 0" range="-30 30"/>
        <geom name="right_hip_geom" type="box" size="0.035 0.035 0.035" rgba="0.5 0.2 0.2 1"/>

        <body name="right_thigh" pos="0 0 0">
          <!-- Servo 5: Hip pitch (fwd/back) -->
          <joint name="right_hip_pitch" type="hinge" axis="0 1 0" range="-60 60"/>
          <geom name="right_thigh_geom" type="box" size="0.04 0.04 0.1" pos="0 0 -0.1" rgba="0.5 0.2 0.2 1" mass="1.5"/>

          <body name="right_shin" pos="0 0 -0.2">
            <!-- Servo 6: Knee (fwd/back) -->
            <joint name="right_knee" type="hinge" axis="0 1 0" range="-5 120"/>
            <geom name="right_shin_geom" type="box" size="0.035 0.035 0.1" pos="0 0 -0.1" rgba="0.5 0.2 0.2 1" mass="1"/>

            <body name="right_foot" pos="0 0 -0.2">
              <!-- Servo 7: Ankle roll (out/in) -->
              <joint name="right_ankle_roll" type="hinge" axis="1 0 0" range="-30 30"/>
              <geom name="right_foot_geom" type="box" size="0.08 0.04 0.02" pos="0.02 0 -0.02" rgba="0.5 0.2 0.2 1" mass="0.5"/>
              <site name="right_foot_site" pos="0 0 -0.02"/>
            </body>
          </body>
        </body>
      </body>

      <!-- LEFT LEG (Servos 15, 16, 17, 18) -->
      <body name="left_hip" pos="-0.08 0 -0.1">
        <!-- Servo 15: Hip roll (out/in) -->
        <joint name="left_hip_roll" type="hinge" axis="1 0 0" range="-30 30"/>
        <geom name="left_hip_geom" type="box" size="0.035 0.035 0.035" rgba="0.5 0.2 0.2 1"/>

        <body name="left_thigh" pos="0 0 0">
          <!-- Servo 16: Hip pitch (fwd/back) -->
          <joint name="left_hip_pitch" type="hinge" axis="0 1 0" range="-60 60"/>
          <geom name="left_thigh_geom" type="box" size="0.04 0.04 0.1" pos="0 0 -0.1" rgba="0.5 0.2 0.2 1" mass="1.5"/>

          <body name="left_shin" pos="0 0 -0.2">
            <!-- Servo 17: Knee (fwd/back) -->
            <joint name="left_knee" type="hinge" axis="0 1 0" range="-5 120"/>
            <geom name="left_shin_geom" type="box" size="0.035 0.035 0.1" pos="0 0 -0.1" rgba="0.5 0.2 0.2 1" mass="1"/>

            <body name="left_foot" pos="0 0 -0.2">
              <!-- Servo 18: Ankle roll (out/in) -->
              <joint name="left_ankle_roll" type="hinge" axis="1 0 0" range="-30 30"/>
              <geom name="left_foot_geom" type="box" size="0.08 0.04 0.02" pos="0.02 0 -0.02" rgba="0.5 0.2 0.2 1" mass="0.5"/>
              <site name="left_foot_site" pos="0 0 -0.02"/>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <!-- Head (servo 0) -->
    <motor name="head_motor" joint="head_pan" gear="20"/>

    <!-- Right arm (servos 1, 2, 3) -->
    <motor name="right_shoulder_pitch_motor" joint="right_shoulder_pitch" gear="30"/>
    <motor name="right_shoulder_roll_motor" joint="right_shoulder_roll" gear="30"/>
    <motor name="right_elbow_motor" joint="right_elbow" gear="20"/>

    <!-- Left arm (servos 12, 13, 14) -->
    <motor name="left_shoulder_pitch_motor" joint="left_shoulder_pitch" gear="30"/>
    <motor name="left_shoulder_roll_motor" joint="left_shoulder_roll" gear="30"/>
    <motor name="left_elbow_motor" joint="left_elbow" gear="20"/>

    <!-- Right leg (servos 4, 5, 6, 7) -->
    <motor name="right_hip_roll_motor" joint="right_hip_roll" gear="50"/>
    <motor name="right_hip_pitch_motor" joint="right_hip_pitch" gear="50"/>
    <motor name="right_knee_motor" joint="right_knee" gear="50"/>
    <motor name="right_ankle_roll_motor" joint="right_ankle_roll" gear="30"/>

    <!-- Left leg (servos 15, 16, 17, 18) -->
    <motor name="left_hip_roll_motor" joint="left_hip_roll" gear="50"/>
    <motor name="left_hip_pitch_motor" joint="left_hip_pitch" gear="50"/>
    <motor name="left_knee_motor" joint="left_knee" gear="50"/>
    <motor name="left_ankle_roll_motor" joint="left_ankle_roll" gear="30"/>
  </actuator>
</mujoco>
