<mujoco model="left_arm">
  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>

  <asset>
    <material name="base_mat" rgba="0.4 0.4 0.4 1"/>
    <material name="shoulder_mat" rgba="0.2 0.6 0.2 1"/>
    <material name="upper_arm_mat" rgba="0.2 0.4 0.8 1"/>
    <material name="forearm_mat" rgba="0.8 0.3 0.2 1"/>
  </asset>

  <worldbody>
    <!-- Fixed torso base -->
    <body name="torso" pos="0 0 0.5">
      <inertial pos="0 0 0" mass="100" diaginertia="1 1 1"/>
      <geom name="torso_geom" type="box" size="0.15 0.1 0.2" material="base_mat"/>

      <!-- Servo 12: Shoulder pitch (forward/backward, Y-axis) -->
      <body name="shoulder" pos="0.17 0 0.1">
        <joint name="shoulder_pitch" type="hinge" axis="0 1 0" damping="0.5" armature="0.02"
               range="-90 90"/>
        <inertial pos="0 0 -0.05" mass="0.3" diaginertia="0.001 0.001 0.0005"/>
        <geom name="shoulder_geom" type="capsule" size="0.03" fromto="0 0 0 0 0 -0.08"
              material="shoulder_mat"/>

        <!-- Servo 13: Shoulder roll (inward/outward, X-axis) -->
        <body name="upper_arm" pos="0 0 -0.1">
          <joint name="shoulder_roll" type="hinge" axis="1 0 0" damping="0.5" armature="0.02"
                 range="-90 90"/>
          <inertial pos="0 0 -0.06" mass="0.25" diaginertia="0.0008 0.0008 0.0003"/>
          <geom name="upper_arm_geom" type="capsule" size="0.025" fromto="0 0 0 0 0 -0.12"
                material="upper_arm_mat"/>

          <!-- Servo 14: Forearm roll (inward/outward, X-axis) -->
          <body name="forearm" pos="0 0 -0.14">
            <joint name="forearm_roll" type="hinge" axis="1 0 0" damping="0.5" armature="0.02"
                   range="-90 90"/>
            <inertial pos="0 0 -0.05" mass="0.15" diaginertia="0.0004 0.0004 0.0002"/>
            <geom name="forearm_geom" type="capsule" size="0.02" fromto="0 0 0 0 0 -0.1"
                  material="forearm_mat"/>
            <!-- Hand/gripper placeholder -->
            <geom name="hand_geom" type="sphere" size="0.025" pos="0 0 -0.12"
                  material="forearm_mat" mass="0.05"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <!-- Position-controlled servos -->
    <position name="servo_12" joint="shoulder_pitch" kp="100"/>
    <position name="servo_13" joint="shoulder_roll" kp="100"/>
    <position name="servo_14" joint="forearm_roll" kp="100"/>
  </actuator>
</mujoco>
